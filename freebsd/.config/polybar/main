[colors]
background = ${xrdb:background}
background-accent-1 = ${xrdb:color8}
background-accent-2 = ${xrdb:color6}
foreground = ${xrdb:foreground}
foreground-accent-1 = ${xrdb:foreground}
foreground-accent-2 = ${xrdb:color0}
primary = ${xrdb:color2}
secondary = ${xrdb:color3}
transparent = #00000000

[bar/default]
margin-top = 5
height = 3%
font-0 = "Greybeard:style=Regular:size=14;2"
modules-left = i3 xwindow
modules-right = volume date
background = ${colors.transparent}
foreground = ${colors.foreground}
underline-size = 2
underline-color = ${colors.primary}
padding = 7
module-margin = 1

[bar/left]
inherit = bar/default
monitor = ${env:MONITOR:DP-4}

[bar/right]
inherit = bar/default
monitor = ${env:MONITOR:HDMI-0}
tray-position = right
tray-padding = 5

[module/i3]
type = internal/i3
index-sort = true
pin-workspaces = true
label-unfocused-foreground = ${xrdb:color7}
label-unfocused-padding = 1
label-visible-foreground = ${colors.primary}
label-visible-padding = 1
label-focused-foreground = ${colors.primary}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

[module/xwindow]
type = internal/xwindow
format-padding = 1
label = %title%
label-maxlen = 80

[module/volume]
type = internal/pulseaudio
sink = oss_output.dsp7
label-volume = "VOL %percentage:3%%"
label-volume-foreground = ${colors.primary}
label-muted = "MUTE"
label-muted-foreground = ${colors.secondary}

[module/date]
type = internal/date
interval = 1
date = %Y-%m-%d
time = %H:%M:%S
label = %time%
