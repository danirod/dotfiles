set $mod Mod4
set $alt Mod1

font xft:Ubuntu Mono 13

# window positioning
new_window pixel 0
new_float pixel 0
gaps inner 20

# color theme (load from xresources)
set_from_resource $foreground       foreground #000000
set_from_resource $background       background #000000
set_from_resource $darkblack        color0  #000000
set_from_resource $black            color8  #000000
set_from_resource $darkred          color1  #000000
set_from_resource $red              color9  #000000
set_from_resource $darkgreen        color2  #000000
set_from_resource $green            color10 #000000
set_from_resource $darkyellow       color3  #000000
set_from_resource $yellow           color11 #000000
set_from_resource $darkblue         color4  #000000
set_from_resource $blue             color12 #000000
set_from_resource $darkmagenta      color5  #000000
set_from_resource $magenta          color13 #000000
set_from_resource $darkleafgreen    color6  #000000
set_from_resource $leafgreen        color14 #000000
set_from_resource $darkwhite        color7  #000000
set_from_resource $white            color15 #000000

client.focused $green $green $foreground $green
client.unfocused $background $background $white $background
client.focused_inactive $background $background $foreground $background
client.urgent $red $red $red $red

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start and stop
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+d exec $HOME/.config/rofi/apps.sh
bindsym $mod+Shift+d exec $HOME/.config/rofi/run.sh
bindsym $mod+Shift+s exec $HOME/.config/rofi/tools.sh

bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+ntilde move right

# aditional window management
bindsym $mod+v split toggle
bindsym $mod+a focus parent

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

set $pace1 "1"
set $pace2 "2"
set $pace3 "3"
set $pace4 "4"
workspace $pace1 output primary
workspace $pace2 output primary
workspace $pace3 output primary
workspace $pace4 output primary

# switch to workspace
bindsym $mod+1 workspace $pace1
bindsym $mod+2 workspace $pace2
bindsym $mod+3 workspace $pace3
bindsym $mod+4 workspace $pace4

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $pace1
bindsym $mod+Shift+2 move container to workspace $pace2
bindsym $mod+Shift+3 move container to workspace $pace3
bindsym $mod+Shift+4 move container to workspace $pace4

# i3 management
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "$HOME/.config/rofi/poweroff.sh"

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ntilde resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# extra settings may be overriden per host.
include ~/.config/i3/`hostnamectl hostname`.conf

# polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id nm-applet
