[colors]
background = ${xrdb:color0}
background-accent-1 = ${xrdb:color0}
background-accent-2 = ${xrdb:color4}
foreground = ${xrdb:color15}
foreground-accent-1 = ${xrdb:foreground}
foreground-accent-2 = ${xrdb:color0}
primary = ${xrdb:color2}
secondary = ${xrdb:color4}
transparent = #00000000

[bar/default]
margin-top = 5
height = 30
font-0 = "Greybeard 15px:style=Regular:size=11;2"
modules-left = i3 xwindow
modules-right = dunst volume date
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 2
underline-color = ${colors.primary}
padding = 1
module-margin = 1
enable-ipc = 1

[bar/top]
inherit = bar/default
monitor = ${env:MONITOR:DP-4}
bottom = true

[bar/bottom]
inherit = bar/default
monitor = ${env:MONITOR:DP-0}
tray-position = right
tray-padding = 5

[module/i3]
type = internal/i3
index-sort = true
pin-workspaces = true
label-unfocused-foreground = ${xrdb:color7}
label-unfocused-padding = 1
label-visible-foreground = ${colors.primary}
label-visible-padding = 1
label-focused-foreground = ${colors.primary}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

[module/xwindow]
type = internal/xwindow
format-padding = 1
label = %title%
label-maxlen = 80

[module/volume]
type = internal/pulseaudio
sink = oss_output.dsp7
label-volume = "VOL %percentage:3%%"
label-volume-foreground = ${colors.primary}
label-muted = "MUTE"
label-muted-foreground = ${colors.secondary}

[module/date]
type = internal/date
interval = 1
date = %Y-%m-%d
time = %H:%M:%S
label = %date% %time%

[module/dunst]
type = custom/ipc
format = <output>
format-foreground = ${xrdb:color5}
hook-0 = $HOME/.config/dunst/query
hook-1 = $HOME/.config/dunst/toggle
initial = 1
click-left = "#dunst.hook.1"
