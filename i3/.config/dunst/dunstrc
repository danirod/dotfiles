# See dunst(5) for all configuration options

[global]
    monitor = 0
    follow = none
    transparency = 0

    width = 600
    height = 240
    origin = top-right
    offset = 20x65
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 8
    gap_size = 8

    frame_width = 0

    font = Ubuntu Mono 12
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    show_age_threshold = 60

    enable_recursive_icon_lookup = true
    icon_theme = Adwaita
    icon_position = left
    min_icon_size = 16
    max_icon_size = 32

    sort = yes
    sticky_history = yes
    history_length = 20

    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    ignore_dbusclose = false

    mouse_left_click = do_action, close_current
    mouse_middle_click = close_current
    mouse_right_click = context

[urgency_low]
    background = "#2e3440"
    foreground = "#eceff4"
    timeout = 10
[urgency_normal]
    background = "#434c5e"
    foreground = "#eceff4"
    timeout = 10
[urgency_critical]
    background = "#bf616a"
    foreground = "#eceff4"
    timeout = 0
