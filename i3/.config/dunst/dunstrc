# See dunst(5) for all configuration options

[global]
    monitor = 0
    follow = none
    transparency = 0

    width = 600
    height = 240
    origin = top-center
    offset = 0x50
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 8
    gap_size = 8

    font = GoMono Nerd Font 11
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    show_age_threshold = 60

    enable_recursive_icon_lookup = true
    icon_theme = Adwaita
    icon_position = left
    min_icon_size = 16
    max_icon_size = 32

    sort = yes
    sticky_history = yes
    history_length = 20

    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 5
    ignore_dbusclose = false

    mouse_left_click = do_action, close_current
    mouse_middle_click = close_current
    mouse_right_click = context

[urgency_low]
    background = "#282828"
    foreground = "#b9b9b9"
    timeout = 10
[urgency_normal]
    background = "#70b433"
    foreground = "#282828"
    timeout = 10
[urgency_critical]
    background = "#eb6eb7"
    foreground = "#282828"
    frame_color = "#ff0000"
    timeout = 0
