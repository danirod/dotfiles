[include]
    path=~/.gitconfig.local

[alias]
    lod = log --oneline --decorate --color
    co = checkout
    ci = commit
    ap = add -p
    am = commit --amend
    unadd = reset HEAD --
    tupper = stash --include-untracked
    staged = diff --staged

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false

[diff]
    tool = vimdiff

[difftool]
    prompt = false
